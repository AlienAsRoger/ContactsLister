<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:robo="http://schemas.android.com/apk/res/com.developer4droid.contactslister"
	android:layout_width="@dimen/popup_dialog_width"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:minWidth="@dimen/popup_dialog_width"
	android:paddingTop="@dimen/popup_top_padding"
	android:paddingBottom="@dimen/popup__bottom_padding"
	android:paddingLeft="@dimen/popup_side_padding"
	android:paddingRight="@dimen/popup_side_padding"
	android:background="@drawable/dashboard_single_back"
	android:layout_marginRight="@dimen/popup_side_margin"
	android:layout_marginLeft="@dimen/popup_side_margin"
	>

	<com.chess.RoboTextView
		android:id="@+id/popupTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:maxWidth="@dimen/popup_dialog_text_max_width"
		android:gravity="center"
		android:textStyle="bold"
		android:textSize="19sp"
		style="@style/DarkShadowBottom"
		robo:ttf="Bold"
		/>

	<com.chess.RoboTextView
		android:id="@+id/popupMessage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:maxWidth="@dimen/popup_dialog_text_max_width"
		android:gravity="center"
		android:paddingTop="16dip"
		android:paddingBottom="16dip"
		style="@style/DarkShadowBottom"
		android:textSize="17sp"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

		<com.chess.RoboButton
			android:id="@+id/positiveBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/Text.Button"
			android:text="@string/ok"
			android:layout_gravity="center_horizontal"
			android:layout_weight="1"
			/>

		<com.chess.RoboButton
			android:id="@+id/neutralBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="@style/Text.Button.Grey"
			android:layout_gravity="center_horizontal"
			/>

		<com.chess.RoboButton
			android:id="@+id/negativeBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="@style/Text.Button.Grey"
			android:text="@string/cancel"
			android:layout_gravity="center_horizontal"
			/>
	</LinearLayout>

</LinearLayout>