<?xml version="1.0" encoding="utf-8"?>

<resources>


	<style name="Text" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">normal</item>
		<item name="android:paddingTop">3dip</item>
		<item name="android:paddingBottom">3dip</item>
	</style>



	<style name="Text.Button">
		<item name="android:background">@drawable/button_orange_selector</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:textSize">@dimen/default_button_text_size</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">16dip</item>
		<item name="android:paddingRight">16dip</item>
		<item name="android:paddingTop">1dip</item>
		<item name="android:paddingBottom">1dip</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
	</style>

    <style name="Text.Button.Grey">
        <item name="android:background">@drawable/button_grey_selector</item>
    </style>

    <style name="Text.Button.Green" >
        <item name="android:background">@drawable/button_green_selector</item>
    </style>




    <style name="Text.Button.Login" >
        <item name="android:background">@drawable/button_f_selector</item>
		<item name="android:paddingLeft">@dimen/button_login_fb_left_padding</item>
    </style>


    <style name="list_text" >
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>
    


    <style name="DashboardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ttt" parent="@android:style/Widget.EditText">

    </style>

    <style name="DefaultEdt" parent="@android:style/Widget.EditText">    <!--parent="@android:style/Widget.EditText"-->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/textfield_selector</item>-->
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/default_field_height</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColorHint">@color/hint_text</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
    </style>

	<style name="DefaultAutoComplete" parent="DefaultEdt" >
		<!--<item name="android:completionHintView">@layout/simple_dropdown_hint</item>-->
		<item name="android:completionThreshold">2</item>
		<item name="android:dropDownSelector">@android:drawable/list_selector_background</item>
		<item name="android:popupBackground">@android:drawable/spinner_dropdown_background</item>
		<item name="android:dropDownVerticalOffset">-6dip</item>
		<item name="android:dropDownHorizontalOffset">0dip</item>
		<item name="android:dropDownWidth">wrap_content</item>
	</style>

	<style name="DefaultListView" parent="android:style/Widget.ListView" >
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:background">@android:color/transparent</item>
		<!--<item name="android:listSelector">@drawable/list_selector_background</item>-->
	</style>

    <style name="DashboardItemText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    

    <style name="spinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:layout_margin">2dip</item>
        <item name="android:drawSelectorOnTop">true</item>
        <!--<item name="android:background">@drawable/spinner_background</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="spinnerStyleDropDown" parent="Text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="spinnerText" parent="Text">
        <item name="android:textColor">@color/hint_text</item>
    </style>

    <style name="check_Box" parent="android:Widget.CompoundButton.CheckBox">
        <!--<item name="android:button">@drawable/btn_check_selector</item>-->
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:textStyle">normal</item>
		<item name="android:gravity">center_vertical</item>
    </style>


    <style name="radio_Button" parent="android:Widget.CompoundButton.RadioButton">
        <!--<item name="android:button">@drawable/btn_radio_selector</item>-->
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:textStyle">normal</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
		<item name="android:gravity">center_vertical</item>
    </style>

	<style name="SettingsDividerText" parent="Text">
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="lineDivider" >
		<item name="android:layout_marginBottom">5dip</item>
	</style>

<!--	<style name="tightContainer" >
		<item name="android:paddingBottom">5dip</item>
		<item name="android:paddingTop">5dip</item>
	</style>-->

	<style name="LinearDescription">
		<item name="android:weightSum">10</item>
		<item name="android:paddingBottom">@dimen/default_linear_bottom_padding</item>
		<item name="android:paddingTop">@dimen/default_linear_top_padding</item>
		<item name="android:paddingLeft">@dimen/default_linear_left_padding</item>
		<item name="android:paddingRight">@dimen/default_linear_right_padding</item>
		<item name="android:gravity">center_vertical</item>
	</style>


	<style name="GamePanelButton">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="CapturedPiece">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="GameLabel">
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textSize">@dimen/game_label_text_size</item>
		<item name="android:singleLine">true</item>
		<item name="android:paddingTop">@dimen/game_label_padding_top</item>
		<item name="android:paddingBottom">@dimen/game_label_padding_top</item>
	</style>

	<style name="GameLabel.Timer">
		<item name="android:drawablePadding">5dip</item>
		<item name="android:maxWidth">@dimen/player_name_max_width</item>
	</style>

	<style name="GameLabel.Player">
		<item name="android:drawablePadding">5dip</item>
		<item name="android:maxWidth">@dimen/player_name_max_width</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>

	<style name="DarkShadowBottom">
		<item name="android:textColor">@color/white</item>
		<item name="android:shadowColor">@color/black</item>
		<item name="android:shadowRadius">0.5</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1.0</item>

	</style>
</resources>
